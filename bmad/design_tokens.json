{
  "version": "2025-01-26",
  "meta": {
    "source": "Cheggie AI Tailwind config and index.css",
    "description": "Normalized tokens for color, typography, spacing, and motion to align shadcn/ui components and marketing sections."
  },
  "color": {
    "background": {"light": "hsl(220 20% 98%)", "dark": "hsl(220 25% 7%)"},
    "foreground": {"light": "hsl(220 15% 12%)", "dark": "hsl(210 40% 98%)"},
    "primary": {
      "base": "hsl(217 91% 15%)",
      "foreground": "hsl(210 40% 98%)",
      "glow": "hsl(217 91% 35%)"
    },
    "secondary": {
      "base": "hsl(142 76% 36%)",
      "foreground": "hsl(0 0% 100%)",
      "glow": "hsl(142 76% 56%)"
    },
    "accent": {
      "base": "hsl(199 89% 48%)",
      "foreground": "hsl(0 0% 100%)"
    },
    "success": {
      "base": "hsl(142 76% 36%)",
      "foreground": "hsl(0 0% 100%)"
    },
    "warning": {
      "base": "hsl(38 92% 50%)",
      "foreground": "hsl(0 0% 100%)"
    },
    "destructive": {
      "base": "hsl(0 84% 60%)",
      "foreground": "hsl(0 0% 100%)"
    },
    "muted": {
      "surface": "hsl(220 14% 96%)",
      "foreground": "hsl(220 9% 46%)"
    },
    "border": {"light": "hsl(220 13% 91%)", "dark": "hsl(220 15% 20%)"},
    "ring": "hsl(217 91% 60%)",
    "gradients": {
      "hero": {
        "light": "linear-gradient(135deg, hsl(217 91% 15%) 0%, hsl(199 89% 48%) 100%)",
        "dark": "linear-gradient(135deg, hsl(217 91% 25%) 0%, hsl(199 89% 38%) 100%)"
      },
      "card": {
        "light": "linear-gradient(180deg, hsl(0 0% 100%), hsl(220 20% 98%))",
        "dark": "linear-gradient(180deg, hsl(220 20% 10%), hsl(220 25% 7%))"
      },
      "primary": "linear-gradient(135deg, hsl(217 91% 15%), hsl(217 91% 35%))",
      "success": "linear-gradient(135deg, hsl(142 76% 36%), hsl(142 76% 56%))",
      "radial-soft": "radial-gradient(circle at 50% 50%, hsl(217 80% 35% / 0.12), transparent 55%)"
    }
  },
  "typography": {
    "fontFamilies": {
      "sans": "'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif",
      "mono": "'JetBrains Mono', 'SFMono-Regular', ui-monospace, monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "lineHeights": {
      "tight": "1.1",
      "snug": "1.25",
      "normal": "1.5",
      "relaxed": "1.7"
    },
    "letterSpacing": {
      "tight": "-0.01em",
      "normal": "0",
      "wide": "0.02em"
    }
  },
  "spacing": {
    "scale": {
      "0": "0px",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    "containerPadding": {"default": "1.5rem", "lg": "2rem"}
  },
  "radii": {
    "xs": "0.375rem",
    "sm": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.5rem",
    "pill": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 hsl(220 15% 12% / 0.05)",
    "md": "0 4px 6px -1px hsl(220 15% 12% / 0.1)",
    "lg": "0 10px 15px -3px hsl(220 15% 12% / 0.1)",
    "glow": "0 0 40px hsl(217 91% 35% / 0.3)",
    "success": "0 0 40px hsl(142 76% 56% / 0.3)"
  },
  "motion": {
    "duration": {"fast": "150ms", "base": "300ms", "slow": "500ms"},
    "easing": {"standard": "cubic-bezier(0.4, 0, 0.2, 1)", "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"},
    "reducedMotion": {"enabled": false, "strategy": "swap to opacity fade"}
  }
}
